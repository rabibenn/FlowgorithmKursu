    <function name="faktoriyelal" type="Integer" variable="sonuc">
        <parameters>
            <parameter name="sayi" type="Integer" array="False"/>
        </parameters>
        <body>
            <declare name="sonuc" type="Integer" array="False" size=""/>
            <assign variable="sonuc" expression="sayi"/>
            <while expression="sayi != 1">
                <assign variable="sonuc" expression="sonuc * (sayi - 1)"/>
                <assign variable="sayi" expression="sayi - 1"/>
            </while>
        </body>
    </function>
